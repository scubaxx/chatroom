<div id='container'>
	<%= render "shared/nav" %>
	<div id='chat-container'>
		<header> Chill Out Room</header>
			<div id='chat-box'>
				<% @messages.each do |msg| %>
					<div class='row'>
						<p><%= msg.content %></p>
						<span>--<%= msg.user.name %></span>	
					</div>
				<% end %>	
			</div>

			<div id='form-box'>
				<%= form_for :messages, url: messages_path do |f| %>
					<%= f.text_field :content, id: 'message_input' %>
					<%= f.submit 'Sent Message' %>
				<% end %>
			</div>
	</div>
</div>	